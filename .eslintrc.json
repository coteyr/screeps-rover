{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    },
    "globals": {
      "Game": "readonly",
      "_": "readonly",
      "RESOURCE_ENERGY": "readonly",
      "MOVE": "readonly",
      "CARRY": "readonly",
      "WORK": "readonly"
    }
}
